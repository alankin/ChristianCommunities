<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/image_achievement"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon_achievement"
            android:layout_margin="10dp"
            android:contentDescription="@string/text_image_achievement"/>
        <TextView
            android:id="@+id/name_achievement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_toEndOf="@+id/image_achievement"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/date_achievement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/name_achievement"
            android:layout_alignStart="@+id/name_achievement"
            android:text="@string/date_example"
            />
        <TextView
            android:id="@+id/description_achievement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/date_achievement"
            android:layout_alignStart="@+id/name_achievement"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>